generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  firebaseId Int? 
  name String
  email String
  height Int
  weight Int
  style String
  sex String
  favourites Favourites[]
  styleSets StyleSets? 
}

model StyleSets {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  createdAt DateTime
  weather String
  styleCapture StyleCapture[]
}

model StyleCapture {
  styleSet StyleSets @relation(fields: [styleSetId], references: [id])
  styleSetId Int @unique
  clothing Clothes @relation(fields: [clothingId], references: [id])
  clothingId Int @unique

  @@id([styleSetId, clothingId])
}

model Clothes {
  id Int @id @default(autoincrement())
  name String
  category String
  weather String
  minTemperature Float
  maxTemperature Float
  image Image[]
  favourites Favourites[]
  stylecapture StyleCapture[]
}

model Image {
  id         Int     @id @default(autoincrement())
  imageUrl   String
  clothingId  Int
  clothing    Clothes  @relation(fields: [clothingId], references: [id])
}

model Favourites {
  user User @relation(fields: [userId], references: [id])
  userId Int 
  clothing Clothes @relation(fields: [clothingId], references: [id])
  clothingId Int 
  @@id([userId, clothingId])
}
